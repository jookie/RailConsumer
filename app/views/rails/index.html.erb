<p id="notice"><%= notice %></p>

<h1>Listing Rails</h1>

<table>
  <thead>
    <tr>
      <th>G</th>
      <th>Scaffold</th>
      <th>Product</th>
      <th>Name</th>
      <th>Length</th>
      <th>Width</th>
      <th>Height</th>
      <th>Weight</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @rails.each do |rail| %>
      <tr>
        <td><%= rail.g %></td>
        <td><%= rail.scaffold %></td>
        <td><%= rail.product %></td>
        <td><%= rail.name %></td>
        <td><%= rail.length %></td>
        <td><%= rail.width %></td>
        <td><%= rail.height %></td>
        <td><%= rail.weight %></td>
        <td><%= link_to 'Show', rail %></td>
        <td><%= link_to 'Edit', edit_rail_path(rail) %></td>
        <td><%= link_to 'Destroy', rail, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

